{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs !
{% endblock %}

{% block body %}
	{% if app.request.attributes.get('_route') == 'admin_account_index' %}
		<div class="container-fluid">
			<div class="p-3">
				<h1 class="text-center">Gestion des utilisateurs</h1>
			</div>

			<table class="table table-hover">
				<thead>
					<tr>
						<th>Id</th>
						<th>Pr√©nom(s)</th>
						<th>Nom</th>
                        <th>Nom d'utilisateur</th>
						<th>Email</th>
						<th>Roles</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for user in pagination.data %}
						<tr>
							<td>{{user.id}}</td>
							<td>{{user.firstName}}</td>
							<td>{{user.lastName}}</td>
                            <td>{{user.username}}</td>
							<td>{{user.email}}</td>
							<td>
								{% for role in user.roles %}
									{% if role == "ROLE_USER" %}
										Utilisateur
									{% elseif role == "ROLE_EDITOR" %}
										Editeur
									{% elseif role == "ROLE_ADMIN" %}
										Administrateur
									{% endif %}
								{% endfor %}
							</td>
							<td>
								<a href="{{ path('admin_account_edit', {'id': user.id}) }}" class="btn btn-primary" >
									<i class="fa fa-edit"></i>
								</a>
								<a href="{{ path('admin_account_delete', {'id': user.id}) }}" data-delete class="btn btn-danger">
									<i class="fa fa-trash"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			{{ pagination.display() }}
		</div>
	{% endif %}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/delete.js') }}"></script>
{% endblock %}
